@model Transfer
@{
    ViewData["Title"] = "نقل جديد";
    ViewData["Breadcrumb"] = "نقل جديد";
}

<div class="page-header"><h1><i class="bi bi-arrow-left-right me-2"></i>طلب نقل جديد</h1></div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="MaterialId" class="form-label">المادة <span class="text-danger">*</span></label>
                    <select asp-for="MaterialId" class="form-select">
                        <option value="">-- اختر المادة --</option>
                        @foreach (var m in ViewBag.Materials as List<Material>)
                        {
                            <option value="@m.Id">@m.Name (@m.Code)</option>
                        }
                    </select>
                    <span asp-validation-for="MaterialId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="TransferDate" class="form-label">تاريخ النقل</label>
                    <input asp-for="TransferDate" class="form-control" type="date" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-5">
                    <label asp-for="FromLocationId" class="form-label">من الموقع <span class="text-danger">*</span></label>
                    <select asp-for="FromLocationId" class="form-select">
                        <option value="">-- اختر موقع المصدر --</option>
                        @foreach (var l in ViewBag.Locations as List<Location>)
                        {
                            <option value="@l.Id">@l.Name</option>
                        }
                    </select>
                    <span asp-validation-for="FromLocationId" class="text-danger"></span>
                </div>
                <div class="col-md-2 text-center d-flex align-items-end justify-content-center pb-2">
                    <i class="bi bi-arrow-left fs-2 text-primary"></i>
                </div>
                <div class="col-md-5">
                    <label asp-for="ToLocationId" class="form-label">إلى الموقع <span class="text-danger">*</span></label>
                    <select asp-for="ToLocationId" class="form-select">
                        <option value="">-- اختر موقع الوجهة --</option>
                        @foreach (var l in ViewBag.Locations as List<Location>)
                        {
                            <option value="@l.Id">@l.Name</option>
                        }
                    </select>
                    <span asp-validation-for="ToLocationId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="Quantity" class="form-label">الكمية <span class="text-danger">*</span></label>
                    <input asp-for="Quantity" class="form-control" type="number" min="1" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="TransferredBy" class="form-label">بواسطة</label>
                    <input asp-for="TransferredBy" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Notes" class="form-label">ملاحظات</label>
                <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
            </div>

            <hr>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>إنشاء طلب النقل</button>
                <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
