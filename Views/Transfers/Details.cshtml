@model WarehouseManagement.Models.Transfer
@{
    ViewData["Title"] = "تفاصيل عملية النقل";
}

<div class="container-fluid" dir="rtl">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">عمليات النقل</a></li>
            <li class="breadcrumb-item active">تفاصيل النقل #@Model.Id</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-arrow-left-right me-2"></i>
                        تفاصيل عملية النقل
                    </h5>
                    @if (Model.IsCancelled)
                    {
                        <span class="badge bg-danger">ملغي</span>
                    }
                    else if (Model.IsExecuted)
                    {
                        <span class="badge bg-success">تم التنفيذ</span>
                    }
                    else if (Model.IsConfirmed)
                    {
                        <span class="badge bg-info">تم التأكيد</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">في انتظار التأكيد</span>
                    }
                </div>
                <div class="card-body">
                    <!-- معلومات المادة -->
                    <h6 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-box-seam me-1"></i> معلومات المادة
                    </h6>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">اسم المادة:</dt>
                                <dd class="col-sm-8">
                                    <a asp-controller="Materials" asp-action="Details" asp-route-id="@Model.MaterialId">
                                        @Model.Material?.Name
                                    </a>
                                </dd>
                                <dt class="col-sm-4">رمز المادة:</dt>
                                <dd class="col-sm-8">@Model.Material?.Code</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">الفئة:</dt>
                                <dd class="col-sm-8">@(Model.Material?.Category?.Name ?? "-")</dd>
                                <dt class="col-sm-4">الوحدة:</dt>
                                <dd class="col-sm-8">@Model.Material?.Unit</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- تفاصيل النقل -->
                    <h6 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-geo-alt me-1"></i> تفاصيل النقل
                    </h6>
                    <div class="row mb-4">
                        <div class="col-md-5 text-center">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">من الموقع</h6>
                                    <h5 class="text-danger">
                                        <i class="bi bi-geo-alt-fill me-1"></i>
                                        @Model.FromLocation?.Name
                                    </h5>
                                    <small class="text-muted">@Model.FromLocation?.Code</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 d-flex align-items-center justify-content-center">
                            <div class="text-center">
                                <i class="bi bi-arrow-left fs-1 text-primary"></i>
                                <div class="badge bg-primary fs-6 mt-2">@Model.Quantity</div>
                            </div>
                        </div>
                        <div class="col-md-5 text-center">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-2">إلى الموقع</h6>
                                    <h5 class="text-success">
                                        <i class="bi bi-geo-alt-fill me-1"></i>
                                        @Model.ToLocation?.Name
                                    </h5>
                                    <small class="text-muted">@Model.ToLocation?.Code</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- التواريخ والمسؤولين -->
                    <h6 class="border-bottom pb-2 mb-3">
                        <i class="bi bi-calendar-event me-1"></i> التواريخ والمسؤولين
                    </h6>
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">تاريخ الطلب:</dt>
                                <dd class="col-sm-7">@Model.TransferDate.ToString("yyyy/MM/dd")</dd>
                                <dt class="col-sm-5">المسؤول عن النقل:</dt>
                                <dd class="col-sm-7">@Model.TransferredBy</dd>
                                <dt class="col-sm-5">تاريخ الإنشاء:</dt>
                                <dd class="col-sm-7">@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            @if (Model.IsConfirmed)
                            {
                                <dl class="row mb-0">
                                    <dt class="col-sm-5">تاريخ التأكيد:</dt>
                                    <dd class="col-sm-7">@Model.ConfirmedDate?.ToString("yyyy/MM/dd")</dd>
                                    <dt class="col-sm-5">تم التأكيد بواسطة:</dt>
                                    <dd class="col-sm-7">@(Model.ConfirmedBy ?? "-")</dd>
                                    @if (Model.IsExecuted)
                                    {
                                        <dt class="col-sm-5">تاريخ التنفيذ:</dt>
                                        <dd class="col-sm-7">@Model.ExecutedDate?.ToString("yyyy/MM/dd")</dd>
                                    }
                                </dl>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Reason))
                    {
                        <h6 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-chat-text me-1"></i> سبب النقل
                        </h6>
                        <div class="alert alert-light mb-4">
                            @Model.Reason
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <h6 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-sticky me-1"></i> ملاحظات
                        </h6>
                        <div class="alert alert-info">
                            @Model.Notes
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <div>
                            @if (!Model.IsConfirmed && !Model.IsCancelled)
                            {
                                <form asp-action="Confirm" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success" onclick="return confirm('هل أنت متأكد من تأكيد وتنفيذ هذا النقل؟')">
                                        <i class="bi bi-check-circle me-1"></i> تأكيد وتنفيذ
                                    </button>
                                </form>
                                <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('هل أنت متأكد من إلغاء هذا النقل؟')">
                                        <i class="bi bi-x-circle me-1"></i> إلغاء
                                    </button>
                                </form>
                            }
                            @if (!Model.IsExecuted && !Model.IsCancelled)
                            {
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i> حذف
                                </a>
                            }
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-right me-1"></i> العودة للقائمة
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- حالة العملية -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0"><i class="bi bi-list-check me-2"></i>مسار العملية</h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-plus-circle text-primary me-2"></i> إنشاء الطلب</span>
                            <i class="bi bi-check-circle-fill text-success"></i>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-check2-square text-info me-2"></i> التأكيد</span>
                            @if (Model.IsConfirmed)
                            {
                                <i class="bi bi-check-circle-fill text-success"></i>
                            }
                            else if (Model.IsCancelled)
                            {
                                <i class="bi bi-x-circle-fill text-danger"></i>
                            }
                            else
                            {
                                <i class="bi bi-hourglass-split text-warning"></i>
                            }
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-gear text-success me-2"></i> التنفيذ</span>
                            @if (Model.IsExecuted)
                            {
                                <i class="bi bi-check-circle-fill text-success"></i>
                            }
                            else if (Model.IsCancelled)
                            {
                                <i class="bi bi-x-circle-fill text-danger"></i>
                            }
                            else
                            {
                                <i class="bi bi-circle text-muted"></i>
                            }
                        </li>
                    </ul>
                </div>
            </div>

            <!-- روابط سريعة -->
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="bi bi-link-45deg me-2"></i>روابط سريعة</h6>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Materials" asp-action="Details" asp-route-id="@Model.MaterialId" class="list-group-item list-group-item-action">
                        <i class="bi bi-box-seam me-2"></i> تفاصيل المادة
                    </a>
                    <a asp-controller="Stock" asp-action="ByLocation" asp-route-id="@Model.FromLocationId" class="list-group-item list-group-item-action">
                        <i class="bi bi-geo-alt me-2"></i> مخزون الموقع المصدر
                    </a>
                    <a asp-controller="Stock" asp-action="ByLocation" asp-route-id="@Model.ToLocationId" class="list-group-item list-group-item-action">
                        <i class="bi bi-geo-alt-fill me-2"></i> مخزون الموقع الهدف
                    </a>
                    <a asp-action="Create" asp-route-materialId="@Model.MaterialId" class="list-group-item list-group-item-action">
                        <i class="bi bi-plus-circle me-2"></i> نقل جديد لنفس المادة
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        dt { font-weight: 600; color: #555; }
        dd { margin-bottom: 0.5rem; }
    </style>
}
