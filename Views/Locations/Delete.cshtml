@model Location
@{
    ViewData["Title"] = "حذف الموقع";
    ViewData["Subtitle"] = Model.Name;
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="fas fa-trash-alt text-danger me-2"></i>حذف الموقع</h1>
        <small class="text-muted">تأكيد الحذف</small>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-right me-1"></i>العودة للمواقع
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <i class="fas fa-exclamation-triangle me-2"></i>تحذير - عملية حذف
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <i class="fas fa-warehouse fa-5x text-danger mb-3"></i>
                    <h4>هل أنت متأكد من حذف هذا الموقع؟</h4>
                    <p class="text-muted">هذه العملية لا يمكن التراجع عنها</p>
                </div>

                <!-- Location Details -->
                <div class="card bg-light mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Name</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1"><strong>الرمز:</strong> <code>@Model.Code</code></p>
                                <p class="mb-1"><strong>العنوان:</strong> @(Model.Address ?? "غير محدد")</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1"><strong>المسؤول:</strong> @(Model.ManagerName ?? "غير محدد")</p>
                                <p class="mb-1">
                                    <strong>الحالة:</strong>
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">نشط</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">غير نشط</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Warning Messages -->
                @{
                    var stocksCount = Model.Stocks?.Count ?? 0;
                    var totalQuantity = Model.Stocks?.Sum(s => s.Quantity) ?? 0;
                    bool hasStock = stocksCount > 0;
                }

                @if (hasStock)
                {
                    <div class="alert alert-danger">
                        <h5><i class="fas fa-ban me-2"></i>لا يمكن حذف هذا الموقع!</h5>
                        <p class="mb-2">هذا الموقع يحتوي على مخزون:</p>
                        <ul class="mb-0">
                            <li><strong>@stocksCount</strong> سجل مخزون</li>
                            <li><strong>@totalQuantity</strong> وحدة إجمالية</li>
                            <li><strong>@((Model.Stocks?.Sum(s => s.CurrentValue) ?? 0m).ToString("N0"))</strong> د.ع قيمة إجمالية</li>
                        </ul>
                        <hr />
                        <p class="mb-0">
                            <i class="fas fa-info-circle me-1"></i>
                            يجب نقل أو حذف جميع المخزون قبل حذف هذا الموقع.
                        </p>
                    </div>

                    <div class="d-flex gap-2 justify-content-center">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-eye me-1"></i>عرض المخزون
                        </a>
                        <a asp-controller="Stock" asp-action="ByLocation" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-boxes me-1"></i>إدارة المخزون
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-right me-1"></i>العودة للمواقع
                        </a>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        سيتم حذف الموقع "<strong>@Model.Name</strong>" نهائياً من النظام.
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-4">
                            <label class="form-label">للتأكيد، اكتب رمز الموقع: <strong>@Model.Code</strong></label>
                            <input type="text" class="form-control" id="confirmCode" dir="ltr"
                                   placeholder="اكتب رمز الموقع للتأكيد" autocomplete="off" />
                        </div>

                        <div class="d-flex gap-2 justify-content-center">
                            <button type="submit" class="btn btn-danger" id="deleteBtn" disabled>
                                <i class="fas fa-trash me-1"></i>تأكيد الحذف
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>إلغاء
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('confirmCode')?.addEventListener('input', function() {
            const expectedCode = '@Model.Code';
            const deleteBtn = document.getElementById('deleteBtn');
            deleteBtn.disabled = this.value.toUpperCase() !== expectedCode.toUpperCase();
        });
    </script>
}
