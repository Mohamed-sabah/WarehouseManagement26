@model Location
@{
    ViewData["Title"] = "إضافة موقع";
    ViewData["Breadcrumb"] = "إضافة موقع";
}

<div class="page-header"><h1><i class="bi bi-plus-circle me-2"></i>إضافة موقع جديد</h1></div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">اسم الموقع <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Code" class="form-label">الرمز <span class="text-danger">*</span></label>
                    <input asp-for="Code" class="form-control" placeholder="WH-01" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="Type" class="form-label">النوع</label>
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<LocationType>()" class="form-select"></select>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ResponsibleDepartment" class="form-label">القسم المسؤول</label>
                    <input asp-for="ResponsibleDepartment" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="ResponsiblePerson" class="form-label">الشخص المسؤول</label>
                    <input asp-for="ResponsiblePerson" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">الوصف</label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>حفظ</button>
                <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
