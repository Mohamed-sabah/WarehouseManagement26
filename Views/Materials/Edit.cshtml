@model MaterialCreateEditViewModel
@{
    ViewData["Title"] = "تعديل: " + Model.Material.Name;
    ViewData["Breadcrumb"] = "تعديل المادة";
}

<div class="page-header">
    <h1><i class="bi bi-pencil me-2"></i>تعديل المادة</h1>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Material.Id" />
            <input type="hidden" asp-for="Material.CreatedDate" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row mb-3">
                <div class="col-md-8">
                    <label asp-for="Material.Name" class="form-label">اسم المادة <span class="text-danger">*</span></label>
                    <input asp-for="Material.Name" class="form-control" />
                    <span asp-validation-for="Material.Name" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Material.Code" class="form-label">الرمز <span class="text-danger">*</span></label>
                    <input asp-for="Material.Code" class="form-control" />
                    <span asp-validation-for="Material.Code" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Material.CategoryId" class="form-label">الفئة</label>
                    <select asp-for="Material.CategoryId" class="form-select">
                        <option value="">-- اختر الفئة --</option>
                        @foreach (var cat in Model.Categories)
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="Material.Unit" class="form-label">الوحدة</label>
                    <select asp-for="Material.Unit" class="form-select">
                        <option value="قطعة">قطعة</option>
                        <option value="كيلوغرام">كيلوغرام</option>
                        <option value="لتر">لتر</option>
                        <option value="متر">متر</option>
                        <option value="علبة">علبة</option>
                        <option value="رزمة">رزمة</option>
                        <option value="كرتون">كرتون</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="Material.MinimumStock" class="form-label">الحد الأدنى</label>
                    <input asp-for="Material.MinimumStock" class="form-control" type="number" min="0" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Material.Description" class="form-label">الوصف</label>
                <textarea asp-for="Material.Description" class="form-control" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Material.Specifications" class="form-label">المواصفات</label>
                <textarea asp-for="Material.Specifications" class="form-control" rows="2"></textarea>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input asp-for="Material.IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="Material.IsActive" class="form-check-label">مفعّل</label>
                </div>
            </div>

            <hr>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-lg me-1"></i>حفظ التغييرات
                </button>
                <a asp-action="Details" asp-route-id="@Model.Material.Id" class="btn btn-secondary">
                    <i class="bi bi-x-lg me-1"></i>إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
