@model StockCreateEditViewModel
@{
    ViewData["Title"] = "إضافة مخزون جديد";
    ViewData["Subtitle"] = "إضافة سجل مخزون لمادة في موقع محدد";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="fas fa-plus-circle me-2"></i>إضافة مخزون جديد</h1>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-right me-1"></i>العودة للقائمة
    </a>
</div>

<div class="card">
    <div class="card-header">
        <i class="fas fa-boxes me-2"></i>بيانات المخزون
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Stock.MaterialId" class="form-label">المادة <span class="text-danger">*</span></label>
                    <select asp-for="Stock.MaterialId" class="form-select" required>
                        <option value="">-- اختر المادة --</option>
                        @foreach (var m in Model.Materials)
                        {
                            <option value="@m.Id">@m.Name (@m.Code)</option>
                        }
                    </select>
                    <span asp-validation-for="Stock.MaterialId" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Stock.LocationId" class="form-label">الموقع <span class="text-danger">*</span></label>
                    <select asp-for="Stock.LocationId" class="form-select" required>
                        <option value="">-- اختر الموقع --</option>
                        @foreach (var l in Model.Locations)
                        {
                            <option value="@l.Id">@l.Name (@l.Code)</option>
                        }
                    </select>
                    <span asp-validation-for="Stock.LocationId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <label asp-for="Stock.Quantity" class="form-label">الكمية <span class="text-danger">*</span></label>
                    <input asp-for="Stock.Quantity" class="form-control" type="number" min="0" required />
                    <span asp-validation-for="Stock.Quantity" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="Stock.Condition" class="form-label">الحالة</label>
                    <select asp-for="Stock.Condition" class="form-select">
                        <option value="ممتازة">ممتازة</option>
                        <option value="جيدة" selected>جيدة</option>
                        <option value="متوسطة">متوسطة</option>
                        <option value="ضعيفة">ضعيفة</option>
                        <option value="تالفة">تالفة</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="Stock.ExpiryDate" class="form-label">تاريخ انتهاء الصلاحية</label>
                    <input asp-for="Stock.ExpiryDate" class="form-control" type="date" />
                    <small class="text-muted">اختياري - للمواد ذات الصلاحية المحددة</small>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Stock.BatchNumber" class="form-label">رقم الدفعة</label>
                    <input asp-for="Stock.BatchNumber" class="form-control" placeholder="مثال: BATCH-2024-001" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Stock.ExactLocation" class="form-label">الموقع الدقيق</label>
                    <input asp-for="Stock.ExactLocation" class="form-control" placeholder="مثال: رف A - صف 3 - عمود 2" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Stock.Notes" class="form-label">ملاحظات</label>
                <textarea asp-for="Stock.Notes" class="form-control" rows="3" placeholder="أي ملاحظات إضافية..."></textarea>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>ملاحظة:</strong> إذا كانت المادة موجودة مسبقاً في هذا الموقع، سيتم رفض الإضافة. استخدم خيار "تعديل الكمية" بدلاً من ذلك.
            </div>

            <hr>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check me-1"></i>حفظ المخزون
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times me-1"></i>إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
