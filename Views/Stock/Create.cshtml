@model WarehouseManagement.Models.ViewModels.StockCreateEditViewModel
@{
    ViewData["Title"] = "إضافة مخزون جديد";
}

<div class="container" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-plus-circle me-2"></i>
                        إضافة سجل مخزون جديد
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Stock.MaterialId" class="form-label">المادة <span class="text-danger">*</span></label>
                                <select asp-for="Stock.MaterialId" class="form-select" required>
                                    <option value="">-- اختر المادة --</option>
                                    @if (Model.Materials != null)
                                    {
                                        foreach (var material in Model.Materials)
                                        {
                                            <option value="@material.Id">@material.Name (@material.Code)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Stock.MaterialId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Stock.LocationId" class="form-label">الموقع <span class="text-danger">*</span></label>
                                <select asp-for="Stock.LocationId" class="form-select" required>
                                    <option value="">-- اختر الموقع --</option>
                                    @if (Model.Locations != null)
                                    {
                                        foreach (var location in Model.Locations)
                                        {
                                            <option value="@location.Id">@location.Name (@location.Code)</option>
                                        }
                                    }
                                </select>
                                <span asp-validation-for="Stock.LocationId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Stock.Quantity" class="form-label">الكمية <span class="text-danger">*</span></label>
                                <input asp-for="Stock.Quantity" class="form-control" type="number" min="0" required />
                                <span asp-validation-for="Stock.Quantity" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Stock.Condition" class="form-label">الحالة</label>
                                <select asp-for="Stock.Condition" class="form-select">
                                    <option value="ممتازة">ممتازة</option>
                                    <option value="جيدة" selected>جيدة</option>
                                    <option value="متوسطة">متوسطة</option>
                                    <option value="ضعيفة">ضعيفة</option>
                                    <option value="تالفة">تالفة</option>
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Stock.ExpiryDate" class="form-label">تاريخ انتهاء الصلاحية</label>
                                <input asp-for="Stock.ExpiryDate" class="form-control" type="date" />
                                <span asp-validation-for="Stock.ExpiryDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Stock.BatchNumber" class="form-label">رقم الدفعة</label>
                                <input asp-for="Stock.BatchNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock.ExactLocation" class="form-label">محل التواجد الدقيق</label>
                            <input asp-for="Stock.ExactLocation" class="form-control" placeholder="مثال: رف A - صف 3" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Stock.Notes" class="form-label">ملاحظات</label>
                            <textarea asp-for="Stock.Notes" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-right me-1"></i> رجوع
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i> حفظ
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
