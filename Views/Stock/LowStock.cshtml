@model IEnumerable<MaterialStock>
@{
    ViewData["Title"] = "المخزون المنخفض";
    ViewData["Subtitle"] = "المواد التي تحتاج إعادة تزويد";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="fas fa-exclamation-triangle text-warning me-2"></i>المخزون المنخفض</h1>
        <small class="text-muted">المواد التي وصلت إلى الحد الأدنى أو أقل منه</small>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right me-1"></i>العودة للمخزون
        </a>
        <button onclick="window.print()" class="btn btn-info">
            <i class="fas fa-print me-1"></i>طباعة
        </button>
    </div>
</div>

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-danger text-white text-center p-3">
            <h3 class="mb-0">@Model.Count(s => s.Quantity == 0)</h3>
            <small>نفذ تماماً</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white text-center p-3">
            <h3 class="mb-0">@Model.Count(s => s.Quantity > 0)</h3>
            <small>مخزون منخفض</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white text-center p-3">
            <h3 class="mb-0">@Model.Count()</h3>
            <small>إجمالي العناصر</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-secondary text-white text-center p-3">
            <h3 class="mb-0">@Model.Sum(s => s.CurrentValue).ToString("N0")</h3>
            <small>القيمة (د.ع)</small>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-warning text-dark">
        <i class="fas fa-exclamation-circle me-2"></i>
        قائمة المواد ذات المخزون المنخفض - @Model.Count() عنصر
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>الرمز</th>
                            <th>اسم المادة</th>
                            <th>الفئة</th>
                            <th>الموقع</th>
                            <th>الكمية الحالية</th>
                            <th>الحد الأدنى</th>
                            <th>النقص</th>
                            <th>نسبة التوفر</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var stock in Model.OrderBy(s => (double)s.Quantity / Math.Max(1, s.Material.MinimumStock)))
                        {
                            var shortage = stock.Material.MinimumStock - stock.Quantity;
                            var percentage = stock.Material.MinimumStock > 0 
                                ? (double)stock.Quantity / stock.Material.MinimumStock * 100 
                                : 0;
                            <tr class="@(stock.Quantity == 0 ? "table-danger" : "table-warning")">
                                <td>@(index++)</td>
                                <td><code>@stock.Material.Code</code></td>
                                <td>
                                    <a asp-controller="Materials" asp-action="Details" asp-route-id="@stock.MaterialId">
                                        @stock.Material.Name
                                    </a>
                                </td>
                                <td>@stock.Material.Category?.Name</td>
                                <td>@stock.Location.Name</td>
                                <td>
                                    <span class="fw-bold @(stock.Quantity == 0 ? "text-danger" : "text-warning")">
                                        @stock.Quantity
                                    </span>
                                    @stock.Material.Unit
                                </td>
                                <td>@stock.Material.MinimumStock</td>
                                <td>
                                    @if (shortage > 0)
                                    {
                                        <span class="badge bg-danger">-@shortage</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">0</span>
                                    }
                                </td>
                                <td>
                                    <div class="progress" style="height: 20px; min-width: 80px;">
                                        <div class="progress-bar @(percentage < 25 ? "bg-danger" : percentage < 50 ? "bg-warning" : "bg-success")" 
                                             role="progressbar" 
                                             style="width: @percentage%">
                                            @percentage.ToString("F0")%
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Purchases" asp-action="Create" asp-route-materialId="@stock.MaterialId" 
                                           class="btn btn-success" title="شراء">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                        <a asp-action="Adjust" asp-route-id="@stock.Id" 
                                           class="btn btn-warning" title="تعديل الكمية">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h5>لا توجد مواد ذات مخزون منخفض</h5>
                <p class="text-muted">جميع المواد متوفرة بكميات كافية</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        @@media print {
            .btn, .btn-group { display: none !important; }
        }
    </style>
}
