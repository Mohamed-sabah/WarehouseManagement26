@model WarehouseManagement.Models.ViewModels.PurchasesYearlyReportViewModel
@{
    ViewData["Title"] = "التقرير السنوي للمشتريات";
    ViewData["Subtitle"] = $"تحليل مشتريات عام {Model.Year}";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4 no-print">
    <div>
        <h1><i class="fas fa-chart-line text-success me-2"></i>التقرير السنوي للمشتريات</h1>
        <small class="text-muted">تحليل شامل للمشتريات خلال العام</small>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right me-1"></i>العودة
        </a>
        <button onclick="window.print()" class="btn btn-info">
            <i class="fas fa-print me-1"></i>طباعة
        </button>
        <a asp-action="ExportPurchasesYearly" asp-route-year="@Model.Year" class="btn btn-success">
            <i class="fas fa-file-excel me-1"></i>تصدير Excel
        </a>
    </div>
</div>

<!-- Print Header -->
<div class="print-header text-center mb-4" style="display: none;">
    <h4>@Model.InstitutionName</h4>
    <h3>التقرير السنوي للمشتريات - @Model.Year</h3>
    <p>بتاريخ @DateTime.Now.ToString("yyyy/MM/dd")</p>
</div>

<!-- Year Selection -->
<div class="card mb-4 no-print">
    <div class="card-body">
        <form asp-action="PurchasesYearly" method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label">السنة</label>
                <select name="year" class="form-select">
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                    {
                        <option value="@y" selected="@(y == Model.Year)">@y</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-sync me-1"></i>تحديث التقرير
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-success text-white text-center p-3">
            <h3 class="mb-0">@Model.TotalPurchases.ToString("N0")</h3>
            <small>إجمالي المشتريات</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-primary text-white text-center p-3">
            <h3 class="mb-0">@Model.TotalOrders</h3>
            <small>عدد الطلبات</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white text-center p-3">
            <h3 class="mb-0">@Model.TotalSuppliers</h3>
            <small>عدد الموردين</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-secondary text-white text-center p-3">
            <h3 class="mb-0">@(Model.TotalOrders > 0 ? (Model.TotalPurchases / Model.TotalOrders).ToString("N0") : "0")</h3>
            <small>متوسط قيمة الطلب</small>
        </div>
    </div>
</div>

<!-- Monthly Chart -->
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-chart-bar me-2"></i>المشتريات الشهرية لعام @Model.Year
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>الشهر</th>
                        <th class="text-center">عدد الطلبات</th>
                        <th class="text-center">قيمة المشتريات</th>
                        <th>النسبة من الإجمالي</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        string[] arabicMonths = { "يناير", "فبراير", "مارس", "أبريل", "مايو", "يونيو",
                                                  "يوليو", "أغسطس", "سبتمبر", "أكتوبر", "نوفمبر", "ديسمبر" };
                    }
                    @foreach (var month in Model.MonthlyData)
                    {
                        var percentage = Model.TotalPurchases > 0 ? (month.TotalAmount / Model.TotalPurchases * 100) : 0;
                        <tr>
                            <td>@arabicMonths[month.Month - 1]</td>
                            <td class="text-center">@month.OrderCount</td>
                            <td class="text-center">@month.TotalAmount.ToString("N0")</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="progress flex-grow-1" style="height: 20px;">
                                        <div class="progress-bar bg-success" style="width: @percentage%">
                                            @if (percentage >= 10)
                                            {
                                                @percentage.ToString("F1")<text>%</text>
                                            }
                                        </div>
                                    </div>
                                    @if (percentage < 10)
                                    {
                                        <span class="ms-2">@percentage.ToString("F1")%</span>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot class="table-secondary fw-bold">
                    <tr>
                        <td>المجموع</td>
                        <td class="text-center">@Model.TotalOrders</td>
                        <td class="text-center">@Model.TotalPurchases.ToString("N0")</td>
                        <td>100%</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <!-- Purchases by Category -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-th-large me-2"></i>المشتريات حسب الفئة
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>الفئة</th>
                                <th class="text-center">القيمة</th>
                                <th class="text-center">النسبة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CategorySummary != null)
                            {
                                @foreach (var cat in Model.CategorySummary.OrderByDescending(c => c.TotalAmount))
                                {
                                    var catPercentage = Model.TotalPurchases > 0 ? (cat.TotalAmount / Model.TotalPurchases * 100) : 0;
                                    <tr>
                                        <td>@cat.CategoryName</td>
                                        <td class="text-center">@cat.TotalAmount.ToString("N0")</td>
                                        <td class="text-center">
                                            <span class="badge bg-primary">@catPercentage.ToString("F1")%</span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Suppliers -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-truck me-2"></i>أكبر الموردين
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>المورد</th>
                                <th class="text-center">عدد الطلبات</th>
                                <th class="text-center">القيمة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.SupplierSummary != null)
                            {
                                @foreach (var supplier in Model.SupplierSummary.OrderByDescending(s => s.TotalAmount).Take(10))
                                {
                                    <tr>
                                        <td>@supplier.SupplierName</td>
                                        <td class="text-center">@supplier.OrderCount</td>
                                        <td class="text-center">@supplier.TotalAmount.ToString("N0")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quarterly Summary -->
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-calendar-alt me-2"></i>الملخص الربعي
    </div>
    <div class="card-body">
        <div class="row text-center">
            @{
                var quarters = new[] {
                    new { Name = "الربع الأول", Months = new[] { 1, 2, 3 } },
                    new { Name = "الربع الثاني", Months = new[] { 4, 5, 6 } },
                    new { Name = "الربع الثالث", Months = new[] { 7, 8, 9 } },
                    new { Name = "الربع الرابع", Months = new[] { 10, 11, 12 } }
                };
            }
            @foreach (var quarter in quarters)
            {
                var quarterData = Model.MonthlyData?.Where(m => quarter.Months.Contains(m.Month)).ToList() ?? new List<WarehouseManagement.Models.ViewModels.MonthlyPurchaseDataViewModel>();
                var quarterTotal = quarterData.Sum(m => m.TotalAmount);
                var quarterOrders = quarterData.Sum(m => m.OrderCount);
                var quarterPercentage = Model.TotalPurchases > 0 ? (quarterTotal / Model.TotalPurchases * 100) : 0;
                
                <div class="col-md-3">
                    <div class="card h-100 @(quarterTotal == quarters.Select(q => Model.MonthlyData?.Where(m => q.Months.Contains(m.Month)).Sum(m => m.TotalAmount) ?? 0).Max() ? "border-success" : "")">
                        <div class="card-body">
                            <h6 class="card-title text-muted">@quarter.Name</h6>
                            <h4 class="text-success mb-2">@quarterTotal.ToString("N0")</h4>
                            <small class="d-block">@quarterOrders طلب</small>
                            <div class="progress mt-2" style="height: 5px;">
                                <div class="progress-bar bg-success" style="width: @quarterPercentage%"></div>
                            </div>
                            <small class="text-muted">@quarterPercentage.ToString("F1")% من الإجمالي</small>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Year-over-Year Comparison (if previous year data available) -->
@if (Model.PreviousYearTotal > 0)
{
    var yearChange = Model.TotalPurchases - Model.PreviousYearTotal;
    var yearChangePercent = (yearChange / Model.PreviousYearTotal * 100);
    
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-balance-scale me-2"></i>مقارنة مع العام السابق
        </div>
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-4">
                    <h6 class="text-muted">@(Model.Year - 1)</h6>
                    <h3>@Model.PreviousYearTotal.ToString("N0")</h3>
                </div>
                <div class="col-md-4">
                    <h6 class="text-muted">التغير</h6>
                    <h3 class="@(yearChange >= 0 ? "text-success" : "text-danger")">
                        <i class="fas @(yearChange >= 0 ? "fa-arrow-up" : "fa-arrow-down") me-1"></i>
                        @yearChangePercent.ToString("F1")%
                    </h3>
                </div>
                <div class="col-md-4">
                    <h6 class="text-muted">@Model.Year</h6>
                    <h3>@Model.TotalPurchases.ToString("N0")</h3>
                </div>
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        @@media print {
            .no-print { display: none !important; }
            .print-header { display: block !important; }
            .card { border: 1px solid #000 !important; break-inside: avoid; }
            body { font-size: 11px; }
            .progress { border: 1px solid #000; }
        }
    </style>
}
