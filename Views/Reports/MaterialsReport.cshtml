@model List<WarehouseManagement.Models.Material>
@{
    ViewData["Title"] = "تقرير المواد";
    var categories = ViewBag.Categories as List<WarehouseManagement.Models.Category>;
}

<div class="container-fluid" dir="rtl">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-text me-2"></i>
                        تقرير المواد
                    </h5>
                    <button class="btn btn-light btn-sm" onclick="window.print()">
                        <i class="bi bi-printer me-1"></i> طباعة
                    </button>
                </div>
                <div class="card-body">
                    <!-- فلاتر البحث -->
                    <form method="get" class="row g-3 mb-4">
                        <div class="col-md-4">
                            <label class="form-label">البحث</label>
                            <input type="text" name="searchTerm" class="form-control" 
                                   value="@Context.Request.Query["searchTerm"]" 
                                   placeholder="اسم أو رمز المادة...">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">الفئة</label>
                            <select name="categoryId" class="form-select">
                                <option value="">-- جميع الفئات --</option>
                                @if (categories != null)
                                {
                                    foreach (var cat in categories)
                                    {
                                        var selected = Context.Request.Query["categoryId"] == cat.Id.ToString() ? "selected" : "";
                                        <option value="@cat.Id" @@selected>@cat.Name</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search me-1"></i> بحث
                            </button>
                            <a href="@Url.Action("MaterialsReport")" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i> مسح
                            </a>
                        </div>
                    </form>

                    <!-- إحصائيات -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h3>@ViewBag.TotalMaterials</h3>
                                    <p class="mb-0">إجمالي المواد</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h3>@ViewBag.TotalQuantity</h3>
                                    <p class="mb-0">إجمالي الكمية</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-warning text-dark">
                                <div class="card-body text-center">
                                    <h3>@(((decimal)ViewBag.TotalValue).ToString("N0")) د.ع</h3>
                                    <p class="mb-0">إجمالي القيمة</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- جدول المواد -->
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-center" style="width: 50px;">#</th>
                                    <th>رمز المادة</th>
                                    <th>اسم المادة</th>
                                    <th>الفئة</th>
                                    <th>الوحدة</th>
                                    <th class="text-center">الكمية</th>
                                    <th class="text-center">متوسط السعر</th>
                                    <th class="text-center">القيمة الإجمالية</th>
                                    <th class="text-center">الحالة</th>
                                    <th class="text-center">إجراءات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    var index = 1;
                                    foreach (var material in Model)
                                    {
                                        <tr>
                                            <td class="text-center">@index</td>
                                            <td><code>@material.Code</code></td>
                                            <td>@material.Name</td>
                                            <td>@(material.Category?.Name ?? "-")</td>
                                            <td>@material.Unit</td>
                                            <td class="text-center">@material.TotalQuantity</td>
                                            <td class="text-center">@material.AveragePrice.ToString("N0")</td>
                                            <td class="text-center">@material.TotalValue.ToString("N0")</td>
                                            <td class="text-center">
                                                @if (material.IsLowStock)
                                                {
                                                    <span class="badge bg-danger">منخفض</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">متوفر</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("Details", "Materials", new { id = material.Id })" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        index++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="10" class="text-center text-muted py-4">
                                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                            لا توجد مواد لعرضها
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        @@media print {
            .btn, form, .card-header button {
                display: none !important;
            }
            .card {
                border: none !important;
            }
            .card-header {
                background: #333 !important;
                -webkit-print-color-adjust: exact;
            }
        }
    </style>
}
