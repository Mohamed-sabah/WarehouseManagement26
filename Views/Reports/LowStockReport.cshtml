@model LowStockReportViewModel
@{
    ViewData["Title"] = "تقرير المخزون المنخفض";
    ViewData["Subtitle"] = "المواد التي تحتاج إعادة تزويد";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4 no-print">
    <div>
        <h1><i class="fas fa-exclamation-triangle text-warning me-2"></i>تقرير المخزون المنخفض</h1>
        <small class="text-muted">المواد التي وصلت للحد الأدنى أو أقل</small>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right me-1"></i>العودة
        </a>
        <button onclick="window.print()" class="btn btn-info">
            <i class="fas fa-print me-1"></i>طباعة
        </button>
        <a asp-action="ExportLowStock" class="btn btn-success">
            <i class="fas fa-file-excel me-1"></i>تصدير Excel
        </a>
    </div>
</div>

<!-- Print Header -->
<div class="print-header text-center mb-4" style="display: none;">
    <h4>@Model.InstitutionName</h4>
    <h3>تقرير المخزون المنخفض</h3>
    <p>بتاريخ @DateTime.Now.ToString("yyyy/MM/dd")</p>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-danger text-white text-center p-3">
            <h3 class="mb-0">@Model.Items.Count(i => i.CurrentQuantity == 0)</h3>
            <small>نفذ تماماً</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white text-center p-3">
            <h3 class="mb-0">@Model.Items.Count(i => i.CurrentQuantity > 0 && i.CurrentQuantity < i.MinimumStock)</h3>
            <small>أقل من الحد الأدنى</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white text-center p-3">
            <h3 class="mb-0">@Model.Items.Count(i => i.CurrentQuantity == i.MinimumStock)</h3>
            <small>عند الحد الأدنى</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-secondary text-white text-center p-3">
            <h3 class="mb-0">@Model.Items.Sum(i => i.ShortageQuantity)</h3>
            <small>إجمالي النقص</small>
        </div>
    </div>
</div>

<!-- Filter Card -->
<div class="card mb-4 no-print">
    <div class="card-header">
        <i class="fas fa-filter me-2"></i>خيارات التصفية
    </div>
    <div class="card-body">
        <form asp-action="LowStockReport" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">الفئة</label>
                <select name="categoryId" class="form-select">
                    <option value="">-- جميع الفئات --</option>
                    @foreach (var cat in ViewBag.Categories as IEnumerable<Category>)
                    {
                        <option value="@cat.Id" selected="@(cat.Id == Model.CategoryId)">@cat.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">الموقع</label>
                <select name="locationId" class="form-select">
                    <option value="">-- جميع المواقع --</option>
                    @foreach (var loc in ViewBag.Locations as IEnumerable<Location>)
                    {
                        <option value="@loc.Id" selected="@(loc.Id == Model.LocationId)">@loc.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">الحالة</label>
                <select name="status" class="form-select">
                    <option value="">-- الكل --</option>
                    <option value="outofstock" selected="@(Model.Status == "outofstock")">نفذ تماماً</option>
                    <option value="critical" selected="@(Model.Status == "critical")">حرج (أقل من 25%)</option>
                    <option value="low" selected="@(Model.Status == "low")">منخفض</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-1"></i>عرض التقرير
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Main Report Table -->
<div class="card">
    <div class="card-header bg-warning text-dark">
        <i class="fas fa-table me-2"></i>قائمة المواد ذات المخزون المنخفض - @Model.Items.Count عنصر
    </div>
    <div class="card-body p-0">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">ت</th>
                            <th>رمز المادة</th>
                            <th>اسم المادة</th>
                            <th>الفئة</th>
                            <th>الموقع</th>
                            <th class="text-center">الكمية الحالية</th>
                            <th class="text-center">الحد الأدنى</th>
                            <th class="text-center">النقص</th>
                            <th class="text-center">نسبة التوفر</th>
                            <th class="text-center">الحالة</th>
                            <th class="text-center no-print">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var item in Model.Items.OrderBy(i => (double)i.CurrentQuantity / Math.Max(1, i.MinimumStock)))
                        {
                            var percentage = item.MinimumStock > 0 ? ((double)item.CurrentQuantity / item.MinimumStock * 100) : 0;
                            var rowClass = item.CurrentQuantity == 0 ? "table-danger" : percentage < 50 ? "table-warning" : "";
                            <tr class="@rowClass">
                                <td class="text-center">@(index++)</td>
                                <td><code>@item.MaterialCode</code></td>
                                <td>@item.MaterialName</td>
                                <td>@item.CategoryName</td>
                                <td>@item.LocationName</td>
                                <td class="text-center">
                                    <span class="fw-bold @(item.CurrentQuantity == 0 ? "text-danger" : "text-warning")">
                                        @item.CurrentQuantity
                                    </span>
                                    @item.Unit
                                </td>
                                <td class="text-center">@item.MinimumStock</td>
                                <td class="text-center">
                                    <span class="badge bg-danger">-@item.ShortageQuantity</span>
                                </td>
                                <td>
                                    <div class="progress" style="height: 20px; min-width: 80px;">
                                        <div class="progress-bar @(percentage < 25 ? "bg-danger" : percentage < 50 ? "bg-warning" : "bg-success")" 
                                             style="width: @Math.Min(percentage, 100)%">
                                            @percentage.ToString("F0")%
                                        </div>
                                    </div>
                                </td>
                                <td class="text-center">
                                    @if (item.CurrentQuantity == 0)
                                    {
                                        <span class="badge bg-danger">نفذ</span>
                                    }
                                    else if (percentage < 25)
                                    {
                                        <span class="badge bg-danger">حرج</span>
                                    }
                                    else if (percentage < 50)
                                    {
                                        <span class="badge bg-warning">منخفض</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">تنبيه</span>
                                    }
                                </td>
                                <td class="text-center no-print">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Purchases" asp-action="Create" asp-route-materialId="@item.MaterialId" 
                                           class="btn btn-success" title="شراء">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                        <a asp-controller="Stock" asp-action="Adjust" asp-route-id="@item.StockId" 
                                           class="btn btn-warning" title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-secondary fw-bold">
                        <tr>
                            <td colspan="7" class="text-start">المجموع</td>
                            <td class="text-center">@Model.Items.Sum(i => i.ShortageQuantity)</td>
                            <td colspan="3"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h5>لا توجد مواد ذات مخزون منخفض</h5>
                <p class="text-muted">جميع المواد متوفرة بكميات كافية</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        @@media print {
            .no-print { display: none !important; }
            .print-header { display: block !important; }
            .card { border: 1px solid #000 !important; }
            .progress { border: 1px solid #000; }
            body { font-size: 11px; }
        }
    </style>
}
