@model WarehouseManagement.Models.ViewModels.InventoryForm2ViewModel
@{
    ViewData["Title"] = "نموذج 2 - الجرد السنوي";
    ViewData["Subtitle"] = "استمارة جرد المخزن السنوية";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4 no-print">
    <div>
        <h1><i class="fas fa-clipboard-list text-primary me-2"></i>نموذج 2 - الجرد السنوي</h1>
        <small class="text-muted">استمارة جرد المخزن السنوية الرسمية</small>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right me-1"></i>العودة
        </a>
        <button onclick="window.print()" class="btn btn-info">
            <i class="fas fa-print me-1"></i>طباعة
        </button>
        <a asp-action="ExportForm2" asp-route-year="@Model.Year" class="btn btn-success">
            <i class="fas fa-file-excel me-1"></i>تصدير Excel
        </a>
    </div>
</div>

<!-- Form Header - Official Government Style -->
<div class="card mb-4">
    <div class="card-body text-center">
        <div class="row mb-3">
            <div class="col-4 text-start">
                <p class="mb-1"><strong>جمهورية العراق</strong></p>
                <p class="mb-1">@Model.InstitutionName</p>
                <p class="mb-0">قسم المخازن</p>
            </div>
            <div class="col-4">
                <h3 class="mb-2">نموذج رقم (2)</h3>
                <h4>كشف الجرد السنوي</h4>
            </div>
            <div class="col-4 text-end">
                <p class="mb-1">السنة المالية: <strong>@Model.Year</strong></p>
                <p class="mb-1">تاريخ الجرد: @Model.InventoryDate.ToString("yyyy/MM/dd")</p>
                <p class="mb-0">رقم الكشف: @Model.FormNumber</p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <p class="mb-0"><strong>اسم المخزن:</strong> @Model.WarehouseName</p>
            </div>
            <div class="col-md-4">
                <p class="mb-0"><strong>أمين المخزن:</strong> @Model.WarehouseKeeper</p>
            </div>
            <div class="col-md-4">
                <p class="mb-0"><strong>لجنة الجرد:</strong> @Model.CommitteeHead</p>
            </div>
        </div>
    </div>
</div>

<!-- Year Selection -->
<div class="card mb-4 no-print">
    <div class="card-body">
        <form asp-action="InventoryForm2" method="get" class="row g-3 align-items-end">
            <div class="col-md-2">
                <label class="form-label">السنة</label>
                <select name="year" class="form-select">
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                    {
                        <option value="@y" selected="@(y == Model.Year)">@y</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">الفئة</label>
                <select name="categoryId" class="form-select">
                    <option value="">-- جميع الفئات --</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var cat in ViewBag.Categories as IEnumerable<WarehouseManagement.Models.Category>)
                        {
                            <option value="@cat.Id" selected="@(cat.Id == Model.CategoryId)">@cat.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">الموقع</label>
                <select name="locationId" class="form-select">
                    <option value="">-- جميع المواقع --</option>
                    @if (ViewBag.Locations != null)
                    {
                        @foreach (var loc in ViewBag.Locations as IEnumerable<WarehouseManagement.Models.Location>)
                        {
                            <option value="@loc.Id" selected="@(loc.Id == Model.LocationId)">@loc.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-sync me-1"></i>تحديث
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Summary Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white text-center p-3">
            <h3 class="mb-0">@Model.TotalItems</h3>
            <small>عدد الأصناف</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-success text-white text-center p-3">
            <h3 class="mb-0">@Model.TotalQuantity.ToString("N0")</h3>
            <small>إجمالي الكميات</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white text-center p-3">
            <h3 class="mb-0">@Model.TotalValue.ToString("N0")</h3>
            <small>إجمالي القيمة</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white text-center p-3">
            <h3 class="mb-0">@Model.Items.Count(i => i.Variance != 0)</h3>
            <small>أصناف بها فروقات</small>
        </div>
    </div>
</div>

<!-- Main Inventory Table -->
<div class="card">
    <div class="card-header bg-primary text-white">
        <i class="fas fa-table me-2"></i>كشف الجرد التفصيلي
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-bordered table-sm mb-0" style="font-size: 12px;">
                <thead class="table-dark">
                    <tr>
                        <th rowspan="2" class="text-center align-middle">ت</th>
                        <th rowspan="2" class="align-middle">رمز المادة</th>
                        <th rowspan="2" class="align-middle">اسم المادة ومواصفاتها</th>
                        <th rowspan="2" class="text-center align-middle">الوحدة</th>
                        <th colspan="2" class="text-center">الرصيد الدفتري</th>
                        <th colspan="2" class="text-center">الرصيد الفعلي</th>
                        <th colspan="2" class="text-center">الفرق</th>
                        <th rowspan="2" class="align-middle">الملاحظات</th>
                    </tr>
                    <tr>
                        <th class="text-center">كمية</th>
                        <th class="text-center">قيمة</th>
                        <th class="text-center">كمية</th>
                        <th class="text-center">قيمة</th>
                        <th class="text-center">كمية</th>
                        <th class="text-center">قيمة</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        int index = 1;
                        decimal totalBookQty = 0, totalBookValue = 0, totalActualQty = 0, totalActualValue = 0;
                        
                        @foreach (var item in Model.Items)
                        {
                            var varianceClass = item.Variance < 0 ? "table-danger" : item.Variance > 0 ? "table-warning" : "";
                            totalBookQty += item.BookQuantity;
                            totalBookValue += item.BookValue;
                            totalActualQty += item.ActualQuantity;
                            totalActualValue += item.ActualValue;
                            
                            <tr class="@varianceClass">
                                <td class="text-center">@(index++)</td>
                                <td><code>@item.MaterialCode</code></td>
                                <td>@item.MaterialName</td>
                                <td class="text-center">@item.Unit</td>
                                <td class="text-center">@item.BookQuantity.ToString("N2")</td>
                                <td class="text-center">@item.BookValue.ToString("N0")</td>
                                <td class="text-center">@item.ActualQuantity.ToString("N2")</td>
                                <td class="text-center">@item.ActualValue.ToString("N0")</td>
                                <td class="text-center @(item.Variance < 0 ? "text-danger" : item.Variance > 0 ? "text-success" : "")">
                                    @if (item.Variance != 0)
                                    {
                                        @(item.Variance > 0 ? "+" : "")@item.Variance.ToString("N2")
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td class="text-center @(item.VarianceValue < 0 ? "text-danger" : item.VarianceValue > 0 ? "text-success" : "")">
                                    @if (item.VarianceValue != 0)
                                    {
                                        @(item.VarianceValue > 0 ? "+" : "")@item.VarianceValue.ToString("N0")
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>@item.Notes</td>
                            </tr>
                        }
                        
                        <tr class="table-secondary fw-bold">
                            <td colspan="4" class="text-start">المجموع الكلي</td>
                            <td class="text-center">@totalBookQty.ToString("N2")</td>
                            <td class="text-center">@totalBookValue.ToString("N0")</td>
                            <td class="text-center">@totalActualQty.ToString("N2")</td>
                            <td class="text-center">@totalActualValue.ToString("N0")</td>
                            <td class="text-center">@((totalActualQty - totalBookQty).ToString("N2"))</td>
                            <td class="text-center">@((totalActualValue - totalBookValue).ToString("N0"))</td>
                            <td></td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-center py-4">
                                <i class="fas fa-info-circle text-info me-2"></i>
                                لا توجد بيانات للجرد في الفترة المحددة
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Signatures Section -->
<div class="card mt-4">
    <div class="card-body">
        <div class="row text-center mt-4">
            <div class="col-md-3">
                <p class="mb-4">أمين المخزن</p>
                <p class="border-top pt-2">@Model.WarehouseKeeper</p>
                <p class="text-muted small">التوقيع والتاريخ</p>
            </div>
            <div class="col-md-3">
                <p class="mb-4">عضو اللجنة</p>
                <p class="border-top pt-2">________________</p>
                <p class="text-muted small">التوقيع والتاريخ</p>
            </div>
            <div class="col-md-3">
                <p class="mb-4">عضو اللجنة</p>
                <p class="border-top pt-2">________________</p>
                <p class="text-muted small">التوقيع والتاريخ</p>
            </div>
            <div class="col-md-3">
                <p class="mb-4">رئيس اللجنة</p>
                <p class="border-top pt-2">@Model.CommitteeHead</p>
                <p class="text-muted small">التوقيع والتاريخ</p>
            </div>
        </div>
        <hr />
        <div class="row mt-3">
            <div class="col-md-6">
                <p><strong>ملاحظات اللجنة:</strong></p>
                <div class="border p-3 min-vh-10" style="min-height: 80px;">
                    @Model.CommitteeNotes
                </div>
            </div>
            <div class="col-md-6">
                <p><strong>قرار المدير:</strong></p>
                <div class="border p-3" style="min-height: 80px;">
                    @Model.DirectorDecision
                </div>
                <div class="text-end mt-3">
                    <p class="mb-1">توقيع المدير: ________________</p>
                    <p class="mb-0">التاريخ: ____/____/________</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Variance Summary -->
@if (Model.Items != null && Model.Items.Any(i => i.Variance != 0))
{
    <div class="card mt-4 no-print">
        <div class="card-header bg-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>ملخص الفروقات
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>فروقات بالزيادة</h6>
                    <table class="table table-sm table-bordered">
                        <thead class="table-success">
                            <tr>
                                <th>المادة</th>
                                <th class="text-center">الكمية</th>
                                <th class="text-center">القيمة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items.Where(i => i.Variance > 0))
                            {
                                <tr>
                                    <td>@item.MaterialName</td>
                                    <td class="text-center text-success">+@item.Variance.ToString("N2")</td>
                                    <td class="text-center text-success">+@item.VarianceValue.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <h6>فروقات بالنقص</h6>
                    <table class="table table-sm table-bordered">
                        <thead class="table-danger">
                            <tr>
                                <th>المادة</th>
                                <th class="text-center">الكمية</th>
                                <th class="text-center">القيمة</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items.Where(i => i.Variance < 0))
                            {
                                <tr>
                                    <td>@item.MaterialName</td>
                                    <td class="text-center text-danger">@item.Variance.ToString("N2")</td>
                                    <td class="text-center text-danger">@item.VarianceValue.ToString("N0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        @@media print {
            .no-print { display: none !important; }
            .card { border: 1px solid #000 !important; }
            body { font-size: 10px; }
            table { font-size: 9px; }
            .page-header { display: none; }
        }
        @@page {
            size: A4 landscape;
            margin: 1cm;
        }
    </style>
}
