@model ExpiryReportViewModel
@{
    ViewData["Title"] = "تقرير انتهاء الصلاحية";
    ViewData["Subtitle"] = "المواد المنتهية أو قاربت على الانتهاء";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4 no-print">
    <div>
        <h1><i class="fas fa-calendar-times text-danger me-2"></i>تقرير انتهاء الصلاحية</h1>
        <small class="text-muted">متابعة تواريخ صلاحية المواد</small>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right me-1"></i>العودة
        </a>
        <button onclick="window.print()" class="btn btn-info">
            <i class="fas fa-print me-1"></i>طباعة
        </button>
        <a asp-action="ExportExpiryReport" class="btn btn-success">
            <i class="fas fa-file-excel me-1"></i>تصدير Excel
        </a>
    </div>
</div>

<!-- Print Header -->
<div class="print-header text-center mb-4" style="display: none;">
    <h4>@Model.InstitutionName</h4>
    <h3>تقرير انتهاء صلاحية المواد</h3>
    <p>بتاريخ @DateTime.Now.ToString("yyyy/MM/dd")</p>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-danger text-white text-center p-3">
            <h3 class="mb-0">@Model.Items.Count(i => i.DaysUntilExpiry < 0)</h3>
            <small>منتهية الصلاحية</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white text-center p-3">
            <h3 class="mb-0">@Model.Items.Count(i => i.DaysUntilExpiry >= 0 && i.DaysUntilExpiry <= 30)</h3>
            <small>تنتهي خلال شهر</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white text-center p-3">
            <h3 class="mb-0">@Model.Items.Count(i => i.DaysUntilExpiry > 30 && i.DaysUntilExpiry <= 90)</h3>
            <small>تنتهي خلال 3 أشهر</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-secondary text-white text-center p-3">
            <h3 class="mb-0">@Model.Items.Sum(i => i.AtRiskValue).ToString("N0")</h3>
            <small>القيمة المعرضة للخطر (د.ع)</small>
        </div>
    </div>
</div>

<!-- Filter Card -->
<div class="card mb-4 no-print">
    <div class="card-header">
        <i class="fas fa-filter me-2"></i>خيارات التصفية
    </div>
    <div class="card-body">
        <form asp-action="ExpiryReport" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">فترة الانتهاء</label>
                <select name="days" class="form-select">
                    <option value="0" selected="@(Model.DaysFilter == 0)">منتهية فقط</option>
                    <option value="7" selected="@(Model.DaysFilter == 7)">خلال أسبوع</option>
                    <option value="30" selected="@(Model.DaysFilter == 30)">خلال شهر</option>
                    <option value="90" selected="@(Model.DaysFilter == 90)">خلال 3 أشهر</option>
                    <option value="180" selected="@(Model.DaysFilter == 180)">خلال 6 أشهر</option>
                    <option value="365" selected="@(Model.DaysFilter == 365)">خلال سنة</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">الفئة</label>
                <select name="categoryId" class="form-select">
                    <option value="">-- جميع الفئات --</option>
                    @foreach (var cat in ViewBag.Categories as IEnumerable<Category>)
                    {
                        <option value="@cat.Id" selected="@(cat.Id == Model.CategoryId)">@cat.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">الموقع</label>
                <select name="locationId" class="form-select">
                    <option value="">-- جميع المواقع --</option>
                    @foreach (var loc in ViewBag.Locations as IEnumerable<Location>)
                    {
                        <option value="@loc.Id" selected="@(loc.Id == Model.LocationId)">@loc.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-1"></i>عرض التقرير
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Main Report Table -->
<div class="card">
    <div class="card-header bg-danger text-white">
        <i class="fas fa-table me-2"></i>قائمة المواد حسب تاريخ الانتهاء - @Model.Items.Count عنصر
    </div>
    <div class="card-body p-0">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">ت</th>
                            <th>رمز المادة</th>
                            <th>اسم المادة</th>
                            <th>رقم الدفعة</th>
                            <th>الفئة</th>
                            <th>الموقع</th>
                            <th class="text-center">الكمية</th>
                            <th class="text-center">تاريخ الانتهاء</th>
                            <th class="text-center">الأيام المتبقية</th>
                            <th class="text-center">القيمة</th>
                            <th class="text-center">الحالة</th>
                            <th class="text-center no-print">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var item in Model.Items.OrderBy(i => i.ExpiryDate))
                        {
                            var rowClass = item.DaysUntilExpiry < 0 ? "table-danger" : 
                                          item.DaysUntilExpiry <= 7 ? "table-warning" : 
                                          item.DaysUntilExpiry <= 30 ? "table-info" : "";
                            <tr class="@rowClass">
                                <td class="text-center">@(index++)</td>
                                <td><code>@item.MaterialCode</code></td>
                                <td>@item.MaterialName</td>
                                <td><code>@item.BatchNumber</code></td>
                                <td>@item.CategoryName</td>
                                <td>@item.LocationName</td>
                                <td class="text-center">@item.Quantity @item.Unit</td>
                                <td class="text-center">@item.ExpiryDate.ToString("yyyy/MM/dd")</td>
                                <td class="text-center">
                                    @if (item.DaysUntilExpiry < 0)
                                    {
                                        <span class="badge bg-danger">منتهي منذ @Math.Abs(item.DaysUntilExpiry) يوم</span>
                                    }
                                    else if (item.DaysUntilExpiry == 0)
                                    {
                                        <span class="badge bg-danger">ينتهي اليوم</span>
                                    }
                                    else
                                    {
                                        <span class="badge @(item.DaysUntilExpiry <= 7 ? "bg-warning" : item.DaysUntilExpiry <= 30 ? "bg-info" : "bg-secondary")">
                                            @item.DaysUntilExpiry يوم
                                        </span>
                                    }
                                </td>
                                <td class="text-end">@item.AtRiskValue.ToString("N0")</td>
                                <td class="text-center">
                                    @if (item.DaysUntilExpiry < 0)
                                    {
                                        <span class="badge bg-danger">منتهي</span>
                                    }
                                    else if (item.DaysUntilExpiry <= 7)
                                    {
                                        <span class="badge bg-warning">حرج</span>
                                    }
                                    else if (item.DaysUntilExpiry <= 30)
                                    {
                                        <span class="badge bg-info">قريب</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">تنبيه</span>
                                    }
                                </td>
                                <td class="text-center no-print">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Stock" asp-action="Details" asp-route-id="@item.StockId" 
                                           class="btn btn-outline-primary" title="التفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (item.DaysUntilExpiry < 0)
                                        {
                                            <a asp-controller="Stock" asp-action="Dispose" asp-route-id="@item.StockId" 
                                               class="btn btn-outline-danger" title="إتلاف">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-secondary fw-bold">
                        <tr>
                            <td colspan="6" class="text-start">المجموع</td>
                            <td class="text-center">@Model.Items.Sum(i => i.Quantity)</td>
                            <td colspan="2"></td>
                            <td class="text-end">@Model.Items.Sum(i => i.AtRiskValue).ToString("N0")</td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h5>لا توجد مواد منتهية أو قاربت على الانتهاء</h5>
                <p class="text-muted">جميع المواد ضمن فترة الصلاحية</p>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        @@media print {
            .no-print { display: none !important; }
            .print-header { display: block !important; }
            .card { border: 1px solid #000 !important; }
            body { font-size: 11px; }
        }
    </style>
}
