@model WarehouseManagement.Models.ViewModels.ExpiryReportViewModel
@{
    ViewData["Title"] = "تقرير انتهاء الصلاحية";
    ViewData["Subtitle"] = "المواد المنتهية أو قريبة الانتهاء";
}

<div class="page-header d-flex justify-content-between align-items-center mb-4 no-print">
    <div>
        <h1><i class="fas fa-calendar-times text-danger me-2"></i>تقرير انتهاء الصلاحية</h1>
        <small class="text-muted">متابعة المواد حسب تاريخ الصلاحية</small>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-right me-1"></i>العودة
        </a>
        <button onclick="window.print()" class="btn btn-info">
            <i class="fas fa-print me-1"></i>طباعة
        </button>
        <a asp-action="ExportExpiry" class="btn btn-success">
            <i class="fas fa-file-excel me-1"></i>تصدير Excel
        </a>
    </div>
</div>

<!-- Print Header -->
<div class="print-header text-center mb-4" style="display: none;">
    <h4>@Model.InstitutionName</h4>
    <h3>تقرير انتهاء الصلاحية</h3>
    <p>بتاريخ @DateTime.Now.ToString("yyyy/MM/dd")</p>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-danger text-white text-center p-3">
            <h3 class="mb-0">@Model.ExpiredCount</h3>
            <small>منتهي الصلاحية</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-warning text-white text-center p-3">
            <h3 class="mb-0">@Model.ExpiringThisMonthCount</h3>
            <small>ينتهي خلال شهر</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-info text-white text-center p-3">
            <h3 class="mb-0">@Model.ExpiringIn3MonthsCount</h3>
            <small>ينتهي خلال 3 أشهر</small>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card bg-secondary text-white text-center p-3">
            <h3 class="mb-0">@Model.TotalValueAtRisk.ToString("N0")</h3>
            <small>قيمة معرضة للخطر</small>
        </div>
    </div>
</div>

<!-- Filter Card -->
<div class="card mb-4 no-print">
    <div class="card-header">
        <i class="fas fa-filter me-2"></i>خيارات التصفية
    </div>
    <div class="card-body">
        <form asp-action="ExpiryReport" method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">فترة الانتهاء</label>
                <select name="period" class="form-select">
                    <option value="" selected="@(string.IsNullOrEmpty(Model.Period))">-- الكل --</option>
                    <option value="expired" selected="@(Model.Period == "expired")">منتهي الصلاحية</option>
                    <option value="month" selected="@(Model.Period == "month")">خلال شهر</option>
                    <option value="3months" selected="@(Model.Period == "3months")">خلال 3 أشهر</option>
                    <option value="6months" selected="@(Model.Period == "6months")">خلال 6 أشهر</option>
                    <option value="year" selected="@(Model.Period == "year")">خلال سنة</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">الفئة</label>
                <select name="categoryId" class="form-select">
                    <option value="">-- جميع الفئات --</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var cat in ViewBag.Categories as IEnumerable<WarehouseManagement.Models.Category>)
                        {
                            <option value="@cat.Id" selected="@(cat.Id == Model.CategoryId)">@cat.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">الموقع</label>
                <select name="locationId" class="form-select">
                    <option value="">-- جميع المواقع --</option>
                    @if (ViewBag.Locations != null)
                    {
                        @foreach (var loc in ViewBag.Locations as IEnumerable<WarehouseManagement.Models.Location>)
                        {
                            <option value="@loc.Id" selected="@(loc.Id == Model.LocationId)">@loc.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-1"></i>عرض التقرير
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Main Report Table -->
<div class="card">
    <div class="card-header bg-danger text-white">
        <i class="fas fa-table me-2"></i>قائمة المواد حسب الصلاحية - @Model.TotalItems عنصر
    </div>
    <div class="card-body p-0">
        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center">ت</th>
                            <th>رمز المادة</th>
                            <th>اسم المادة</th>
                            <th>الفئة</th>
                            <th>الموقع</th>
                            <th class="text-center">الكمية</th>
                            <th class="text-center">تاريخ الانتهاء</th>
                            <th class="text-center">الأيام المتبقية</th>
                            <th class="text-center">القيمة</th>
                            <th class="text-center">الحالة</th>
                            <th class="text-center no-print">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                        }
                        @foreach (var item in Model.Items.OrderBy(i => i.DaysRemaining))
                        {
                            var rowClass = item.DaysRemaining <= 0 ? "table-danger" : 
                                           item.DaysRemaining <= 30 ? "table-warning" : 
                                           item.DaysRemaining <= 90 ? "table-info" : "";
                            <tr class="@rowClass">
                                <td class="text-center">@(index++)</td>
                                <td><code>@item.MaterialCode</code></td>
                                <td>@item.MaterialName</td>
                                <td>@item.CategoryName</td>
                                <td>@item.LocationName</td>
                                <td class="text-center">@item.Quantity @item.Unit</td>
                                <td class="text-center">
                                    @if (item.ExpiryDate.HasValue)
                                    {
                                        @item.ExpiryDate.Value.ToString("yyyy/MM/dd")
                                    }
                                    else
                                    {
                                        <span class="text-muted">غير محدد</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.DaysRemaining <= 0)
                                    {
                                        <span class="badge bg-danger">منتهي منذ @Math.Abs(item.DaysRemaining) يوم</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold @(item.DaysRemaining <= 30 ? "text-danger" : item.DaysRemaining <= 90 ? "text-warning" : "text-success")">
                                            @item.DaysRemaining يوم
                                        </span>
                                    }
                                </td>
                                <td class="text-center">@item.TotalValue.ToString("N0")</td>
                                <td class="text-center">
                                    @if (item.DaysRemaining <= 0)
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-times-circle me-1"></i>منتهي</span>
                                    }
                                    else if (item.DaysRemaining <= 30)
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-exclamation-triangle me-1"></i>حرج</span>
                                    }
                                    else if (item.DaysRemaining <= 90)
                                    {
                                        <span class="badge bg-warning"><i class="fas fa-exclamation me-1"></i>قريب</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info"><i class="fas fa-info-circle me-1"></i>تنبيه</span>
                                    }
                                </td>
                                <td class="text-center no-print">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Stock" asp-action="Details" asp-route-id="@item.StockId"
                                           class="btn btn-info" title="تفاصيل">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Consumption" asp-action="Create" asp-route-stockId="@item.StockId"
                                           class="btn btn-warning" title="صرف">
                                            <i class="fas fa-minus-circle"></i>
                                        </a>
                                        @if (item.DaysRemaining <= 0)
                                        {
                                            <a asp-controller="Stock" asp-action="Dispose" asp-route-id="@item.StockId"
                                               class="btn btn-danger" title="إتلاف">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-secondary fw-bold">
                        <tr>
                            <td colspan="5" class="text-start">المجموع</td>
                            <td class="text-center">@Model.Items.Sum(i => i.Quantity)</td>
                            <td colspan="2"></td>
                            <td class="text-center">@Model.TotalValueAtRisk.ToString("N0")</td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h5>لا توجد مواد قريبة من انتهاء الصلاحية</h5>
                <p class="text-muted">جميع المواد ضمن فترة الصلاحية المحددة</p>
            </div>
        }
    </div>
</div>

<!-- Summary by Category -->
@if (Model.Items.Any())
{
    <div class="card mt-4">
        <div class="card-header">
            <i class="fas fa-chart-pie me-2"></i>ملخص حسب الفئة
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var group in Model.Items.GroupBy(i => i.CategoryName))
                {
                    var expiredInGroup = group.Count(i => i.DaysRemaining <= 0);
                    var criticalInGroup = group.Count(i => i.DaysRemaining > 0 && i.DaysRemaining <= 30);
                    var totalValue = group.Sum(i => i.TotalValue);
                    <div class="col-md-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="card-title">@group.Key</h6>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>عدد المواد:</span>
                                    <span class="fw-bold">@group.Count()</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>منتهي:</span>
                                    <span class="badge bg-danger">@expiredInGroup</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>حرج:</span>
                                    <span class="badge bg-warning">@criticalInGroup</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>القيمة:</span>
                                    <span class="fw-bold text-danger">@totalValue.ToString("N0")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        @@media print {
            .no-print { display: none !important; }
            .print-header { display: block !important; }
            .card { border: 1px solid #000 !important; }
            body { font-size: 11px; }
        }
    </style>
}
