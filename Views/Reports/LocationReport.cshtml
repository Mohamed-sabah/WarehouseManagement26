@model WarehouseManagement.Models.ViewModels.LocationReportViewModel
@{
    ViewData["Title"] = "تقرير المواقع";
}

<div class="container-fluid" dir="rtl">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt me-2"></i>
                        تقرير المواقع والمخازن
                    </h5>
                    <button class="btn btn-light btn-sm" onclick="window.print()">
                        <i class="bi bi-printer me-1"></i> طباعة
                    </button>
                </div>
                <div class="card-body">
                    <!-- إحصائيات عامة -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h3>@Model.TotalLocations</h3>
                                    <p class="mb-0">إجمالي المواقع</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h3>@Model.TotalMaterials</h3>
                                    <p class="mb-0">إجمالي المواد</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-dark">
                                <div class="card-body text-center">
                                    <h3>@Model.GrandTotalValue.ToString("N0")</h3>
                                    <p class="mb-0">إجمالي القيمة (د.ع)</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-danger text-white">
                                <div class="card-body text-center">
                                    <h3>@Model.TotalLowStock</h3>
                                    <p class="mb-0">مواد منخفضة</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- قائمة المواقع -->
                    <div class="row">
                        @if (Model.Locations != null && Model.Locations.Any())
                        {
                            foreach (var location in Model.Locations)
                            {
                                <div class="col-lg-6 mb-4">
                                    <div class="card h-100 border-primary">
                                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                            <div>
                                                <h6 class="mb-0">
                                                    <i class="bi bi-building me-1"></i>
                                                    @location.LocationName
                                                </h6>
                                                <small class="text-muted">@location.LocationCode</small>
                                            </div>
                                            <a href="@Url.Action("LocationReport", new { id = location.LocationId })" 
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> تفاصيل
                                            </a>
                                        </div>
                                        <div class="card-body">
                                            <div class="row text-center">
                                                <div class="col-4">
                                                    <div class="border-end">
                                                        <h5 class="text-primary mb-0">@location.MaterialsCount</h5>
                                                        <small class="text-muted">مادة</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="border-end">
                                                        <h5 class="text-success mb-0">@location.TotalQuantity.ToString("N0")</h5>
                                                        <small class="text-muted">كمية</small>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <h5 class="text-warning mb-0">@location.TotalValue.ToString("N0")</h5>
                                                    <small class="text-muted">قيمة</small>
                                                </div>
                                            </div>

                                            @if (location.LowStockCount > 0)
                                            {
                                                <div class="alert alert-warning mt-3 mb-0 py-2">
                                                    <small>
                                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                                        @location.LowStockCount مواد بمخزون منخفض
                                                    </small>
                                                </div>
                                            }

                                            @if (!string.IsNullOrEmpty(location.ManagerName))
                                            {
                                                <div class="mt-3">
                                                    <small class="text-muted">
                                                        <i class="bi bi-person me-1"></i>
                                                        المسؤول: @location.ManagerName
                                                    </small>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <div class="alert alert-info text-center">
                                    <i class="bi bi-info-circle me-2"></i>
                                    لا توجد مواقع لعرضها
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        @@media print {
            .btn {
                display: none !important;
            }
        }
    </style>
}
