@{
    ViewData["Title"] = "التقارير";
    ViewData["Subtitle"] = "جميع تقارير نظام إدارة المخازن";
}

<div class="page-header mb-4">
    <h1><i class="fas fa-chart-bar text-primary me-2"></i>التقارير</h1>
    <small class="text-muted">اختر التقرير المطلوب من القائمة أدناه</small>
</div>

<div class="row">
    <!-- تقارير المواد -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-primary">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-boxes me-2"></i>تقارير المواد
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a asp-action="MaterialsReport" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-list me-2 text-primary"></i>تقرير المواد</span>
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    <a asp-action="MaterialsValue" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-dollar-sign me-2 text-success"></i>تقرير قيمة المواد</span>
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    <a asp-action="PricingReport" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-tags me-2 text-info"></i>تقرير الأسعار</span>
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- تقارير المخزون -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-warning">
            <div class="card-header bg-warning text-dark">
                <i class="fas fa-warehouse me-2"></i>تقارير المخزون
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a asp-action="LowStockReport" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-exclamation-triangle me-2 text-warning"></i>المخزون المنخفض</span>
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    <a asp-action="ExpiryReport" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-calendar-times me-2 text-danger"></i>انتهاء الصلاحية</span>
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    <a asp-action="LocationReport" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-map-marker-alt me-2 text-secondary"></i>تقرير المواقع</span>
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- تقارير المشتريات -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-success">
            <div class="card-header bg-success text-white">
                <i class="fas fa-shopping-cart me-2"></i>تقارير المشتريات
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a asp-action="PurchasesYearly" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-chart-line me-2 text-success"></i>التقرير السنوي</span>
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- النماذج الحكومية -->
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 border-info">
            <div class="card-header bg-info text-white">
                <i class="fas fa-file-alt me-2"></i>النماذج الحكومية
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a asp-action="InventoryForm2" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-clipboard-list me-2 text-primary"></i>نموذج 2 - الجرد السنوي</span>
                        <i class="fas fa-chevron-left"></i>
                    </a>
                    <a asp-action="ConsumptionForm5" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-file-invoice me-2 text-info"></i>نموذج 5 - سجل الصرف</span>
                        <i class="fas fa-chevron-left"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-tachometer-alt me-2"></i>نظرة سريعة
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-primary mb-0" id="totalMaterials">--</h4>
                            <small class="text-muted">إجمالي المواد</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-warning mb-0" id="lowStockCount">--</h4>
                            <small class="text-muted">مخزون منخفض</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="border-end">
                            <h4 class="text-danger mb-0" id="expiringCount">--</h4>
                            <small class="text-muted">قريب الانتهاء</small>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h4 class="text-success mb-0" id="totalValue">--</h4>
                        <small class="text-muted">إجمالي القيمة</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

