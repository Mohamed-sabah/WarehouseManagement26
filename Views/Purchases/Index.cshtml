@model PurchaseListViewModel
@{
    ViewData["Title"] = "سجل المشتريات";
    ViewData["Subtitle"] = "إدارة عمليات الشراء والتوريد";
}

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">المادة</label>
                <select name="materialId" class="form-select">
                    <option value="">جميع المواد</option>
                    @foreach (var m in Model.Materials)
                    {
                        <option value="@m.Id" selected="@(m.Id == Model.MaterialId)">@m.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">الموقع</label>
                <select name="locationId" class="form-select">
                    <option value="">جميع المواقع</option>
                    @foreach (var l in Model.Locations)
                    {
                        <option value="@l.Id" selected="@(l.Id == Model.LocationId)">@l.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">السنة</label>
                <select name="year" class="form-select">
                    <option value="">الكل</option>
                    @foreach (var y in Model.AvailableYears)
                    {
                        <option value="@y" selected="@(y == Model.Year)">@y</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">طريقة الحصول</label>
                <select name="method" class="form-select">
                    <option value="">الكل</option>
                    <option value="0" selected="@(Model.Method == AcquisitionMethod.Purchase)">شراء</option>
                    <option value="1" selected="@(Model.Method == AcquisitionMethod.Transfer)">نقل</option>
                    <option value="2" selected="@(Model.Method == AcquisitionMethod.Gift)">هدية</option>
                    <option value="5" selected="@(Model.Method == AcquisitionMethod.OpeningBalance)">رصيد افتتاحي</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">&nbsp;</label>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary flex-grow-1"><i class="fas fa-filter"></i> تصفية</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-undo"></i></a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-primary text-white text-center p-3">
            <h4 class="mb-0">@Model.TotalPurchases</h4>
            <small>عدد العمليات</small>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white text-center p-3">
            <h4 class="mb-0">@Model.TotalQuantity</h4>
            <small>إجمالي الكمية</small>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white text-center p-3">
            <h4 class="mb-0">@Model.TotalValue.ToString("N0")</h4>
            <small>القيمة الإجمالية (د.ع)</small>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-muted">@Model.Purchases.Count عملية شراء</span>
    <div>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> تسجيل شراء جديد</a>
        <a asp-action="YearlyReport" class="btn btn-info"><i class="fas fa-chart-bar"></i> تقرير سنوي</a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Purchases.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>التاريخ</th>
                            <th>المادة</th>
                            <th>الموقع</th>
                            <th>الكمية</th>
                            <th>سعر الوحدة</th>
                            <th>الإجمالي</th>
                            <th>الطريقة</th>
                            <th>المخزون</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;
                        }
                        @foreach (var p in Model.Purchases)
                        {
                            <tr>
                                <td>@(i++)</td>
                                <td>@p.PurchaseDate.ToString("yyyy/MM/dd")</td>
                                <td><a asp-controller="Materials" asp-action="Details" asp-route-id="@p.MaterialId">@p.Material.Name</a></td>
                                <td>@p.Location?.Name</td>
                                <td>@p.Quantity @p.Material.Unit</td>
                                <td>@p.UnitPrice.ToString("N0")</td>
                                <td>@p.TotalPrice.ToString("N0")</td>
                                <td>
                                    @switch (p.Method)
                                    {
                                        case AcquisitionMethod.Purchase:
                                            <span class="badge bg-primary">شراء</span>
                                            break;
                                        case AcquisitionMethod.Transfer:

                                            <span class="badge bg-info">نقل</span>
                                            break;
                                        case AcquisitionMethod.Gift:

                                            <span class="badge bg-success">هدية</span>
                                            break;
                                        case AcquisitionMethod.OpeningBalance:

                                            <span class="badge bg-secondary">رصيد افتتاحي</span>
                                            break;
                                        default:

                                            <span class="badge bg-dark">@p.Method</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (p.IsAddedToStock)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check"></i></span>
                                    }
                                    else
                                    {
                                        <form asp-action="AddToStock" asp-route-id="@p.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-warning" title="إضافة للمخزون">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-outline-info"><i class="fas fa-eye"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                <h5>لا توجد عمليات شراء</h5>
                <a asp-action="Create" class="btn btn-primary mt-2"><i class="fas fa-plus"></i> تسجيل شراء</a>
            </div>
        }
    </div>
</div>



