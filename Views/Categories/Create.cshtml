@model Category
@{
    ViewData["Title"] = "إضافة فئة";
    ViewData["Breadcrumb"] = "إضافة فئة";
}

<div class="page-header"><h1><i class="bi bi-plus-circle me-2"></i>إضافة فئة جديدة</h1></div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">اسم الفئة <span class="text-danger">*</span></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ParentCategoryId" class="form-label">الفئة الأم</label>
                    <select asp-for="ParentCategoryId" class="form-select">
                        <option value="">-- لا يوجد --</option>
                        @foreach (var cat in ViewBag.ParentCategories as List<Category>)
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">الوصف</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary"><i class="bi bi-check-lg me-1"></i>حفظ</button>
                <a asp-action="Index" class="btn btn-secondary">إلغاء</a>
            </div>
        </form>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
