@model InventoryListViewModel
@{
    ViewData["Title"] = "سجل الجرد السنوي";
    ViewData["Subtitle"] = "نموذج رقم (2) - جرد المواد والمستلزمات";
}

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-2">
                <label class="form-label">السنة</label>
                <select name="year" class="form-select">
                    @foreach (var y in Model.AvailableYears)
                    {
                        <option value="@y" selected="@(y == Model.Year)">@y</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">القسم</label>
                <select name="department" class="form-select">
                    <option value="">جميع الأقسام</option>
                    @foreach (var dept in Model.Departments)
                    {
                        <option value="@dept" selected="@(dept == Model.Department)">@dept</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">الموقع</label>
                <select name="locationId" class="form-select">
                    <option value="">جميع المواقع</option>
                    @foreach (var loc in Model.Locations)
                    {
                        <option value="@loc.Id" selected="@(loc.Id == Model.LocationId)">@loc.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">البحث</label>
                <input type="text" name="searchTerm" class="form-control" value="@Model.SearchTerm" placeholder="اسم أو رمز">
            </div>
            <div class="col-md-2">
                <label class="form-label">&nbsp;</label>
                <div class="form-check mt-2">
                    <input type="checkbox" name="showDifferencesOnly" value="true" class="form-check-input"
                           id="showDifferencesOnly" @(Model.ShowDifferencesOnly ? "checked" : "")>
                    <label class="form-check-label" for="showDifferencesOnly">الفروقات فقط</label>
                </div>
            </div>
            <div class="col-md-1">
                <label class="form-label">&nbsp;</label>
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card bg-primary text-white text-center p-3">
            <h4 class="mb-0">@Model.Statistics.TotalItems</h4>
            <small>إجمالي العناصر</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-success text-white text-center p-3">
            <h4 class="mb-0">@Model.Statistics.ItemsMatching</h4>
            <small>متطابق</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-danger text-white text-center p-3">
            <h4 class="mb-0">@Model.Statistics.ItemsWithShortage</h4>
            <small>نقص</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-warning text-white text-center p-3">
            <h4 class="mb-0">@Model.Statistics.ItemsWithSurplus</h4>
            <small>زيادة</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-info text-white text-center p-3">
            <h4 class="mb-0">@Model.Statistics.ItemsWithConsumption</h4>
            <small>مع استهلاك</small>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-secondary text-white text-center p-3">
            <h4 class="mb-0">@Model.Statistics.TotalCost.ToString("N0")</h4>
            <small>القيمة (د.ع)</small>
        </div>
    </div>
</div>

<!-- Actions Bar -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <span class="text-muted">جرد سنة @Model.Year - @Model.Records.Count سجل</span>
    </div>
    <div class="btn-group">
        <a asp-action="StartBulkInventory" asp-route-year="@Model.Year" class="btn btn-success">
            <i class="fas fa-clipboard-list"></i> بدء جرد جماعي
        </a>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> إضافة سجل
        </a>
        <a asp-action="Report" asp-route-year="@Model.Year" class="btn btn-info" target="_blank">
            <i class="fas fa-print"></i> طباعة
        </a>
    </div>
</div>

<!-- Inventory Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Records.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-sm">
                    <thead class="table-light">
                        <tr>
                            <th>ت</th>
                            <th>الرمز</th>
                            <th>اسم المادة</th>
                            <th>الموقع</th>
                            <th>كمية السجلات</th>
                            <th>كمية الجرد</th>
                            <th>الفرق</th>
                            <th>الكلفة</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var record in Model.Records)
                        {
                            <tr class="@(record.HasShortage ? "table-danger" : record.HasSurplus ? "table-warning" : "")">
                                <td>@record.SequenceNumber</td>
                                <td><code>@record.Material.Code</code></td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@record.Id">@record.Material.Name</a>
                                </td>
                                <td>@record.Location?.Name</td>
                                <td>@record.RecordedQuantity</td>
                                <td>@record.ActualQuantity</td>
                                <td>
                                    @if (record.Difference != 0)
                                    {
                                        <span class="badge @(record.Difference < 0 ? "bg-danger" : "bg-warning")">
                                            @record.Difference
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">0</span>
                                    }
                                </td>
                                <td>@record.TotalCost.ToString("N0")</td>
                                <td>
                                    <span class="badge @(record.Condition == "جيدة" ? "bg-success" : "bg-secondary")">
                                        @record.Condition
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@record.Id" class="btn btn-outline-info" title="عرض">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (!record.HasConsumptions)
                                        {
                                            <a asp-action="TransferToConsumption" asp-route-id="@record.Id"
                                               class="btn btn-outline-warning" title="تحويل للاستهلاك">
                                                <i class="fas fa-arrow-left"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr class="fw-bold">
                            <td colspan="4">المجموع</td>
                            <td>@Model.Statistics.TotalQuantityByRecords</td>
                            <td>@Model.Statistics.TotalQuantityByInventory</td>
                            <td>@Model.Statistics.TotalDifference</td>
                            <td>@Model.Statistics.TotalCost.ToString("N0")</td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-clipboard-list fa-4x text-muted mb-3"></i>
                <h5>لا توجد سجلات جرد</h5>
                <p class="text-muted">ابدأ بإجراء جرد جديد للمواد</p>
                <a asp-action="StartBulkInventory" asp-route-year="@Model.Year" class="btn btn-primary">
                    <i class="fas fa-clipboard-list"></i> بدء الجرد
                </a>
            </div>
        }
    </div>
</div>


