@model WarehouseManagement.Models.ViewModels.ConsumptionReportViewModel
@{
    ViewData["Title"] = "تقرير الاستهلاك";
    var arabicMonths = new[] { "", "كانون الثاني", "شباط", "آذار", "نيسان", "أيار", "حزيران", "تموز", "آب", "أيلول", "تشرين الأول", "تشرين الثاني", "كانون الأول" };
    var currentYear = Model.StartDate.Year;
}

<div class="container-fluid" dir="rtl">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/"><i class="bi bi-house"></i> الرئيسية</a></li>
            <li class="breadcrumb-item"><a href="/Consumption">سجلات الاستهلاك</a></li>
            <li class="breadcrumb-item active">التقرير</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-bar-chart text-primary"></i> تقرير الاستهلاك</h2>
            <p class="text-muted mb-0">@Model.ReportTitle</p>
        </div>
        <div class="btn-group">
            <a asp-action="ExportReport" asp-route-year="@currentYear" class="btn btn-success">
                <i class="bi bi-file-excel"></i> تصدير Excel
            </a>
            <button onclick="window.print()" class="btn btn-outline-secondary">
                <i class="bi bi-printer"></i> طباعة
            </button>
        </div>
    </div>

    <!-- فلاتر -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">من تاريخ</label>
                    <input type="date" name="startDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">إلى تاريخ</label>
                    <input type="date" name="endDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">التصنيف</label>
                    <select name="categoryId" class="form-select">
                        <option value="">الكل</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var cat in ViewBag.Categories as IEnumerable<dynamic>)
                            {
                                <option value="@cat.Id" selected="@(Model.CategoryId == cat.Id)">@cat.Name</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> تطبيق
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- الإحصائيات -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@(Model.Statistics?.TotalItems ?? Model.Records?.Count ?? 0)</h3>
                    <p class="mb-0">إجمالي السجلات</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@(Model.Statistics?.TotalQuantity ?? Model.Records?.Sum(r => r.ConsumedQuantity) ?? 0)</h3>
                    <p class="mb-0">إجمالي الكميات</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3>@((Model.Statistics?.TotalOriginalValue ?? Model.Records?.Sum(r => r.OriginalValue) ?? 0).ToString("N0")) <small>د.ع</small></h3>
                    <p class="mb-0">القيمة الأصلية</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body text-center">
                    <h3>@((Model.Statistics?.TotalLoss ?? Model.Records?.Sum(r => r.LossValue) ?? 0).ToString("N0")) <small>د.ع</small></h3>
                    <p class="mb-0">إجمالي الخسائر</p>
                </div>
            </div>
        </div>
    </div>

    <!-- جدول البيانات -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-table"></i> سجلات الاستهلاك</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>التاريخ</th>
                            <th>كود المادة</th>
                            <th>اسم المادة</th>
                            <th>الكمية</th>
                            <th>السبب</th>
                            <th>القرار</th>
                            <th>القيمة الأصلية</th>
                            <th>الخسارة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Records != null && Model.Records.Any())
                        {
                            int counter = 1;
                            foreach (var record in Model.Records)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>@record.ReportDate.ToString("yyyy/MM/dd")</td>
                                    <td><code>@record.InventoryRecord?.Material?.Code</code></td>
                                    <td>@record.InventoryRecord?.Material?.Name</td>
                                    <td>@record.ConsumedQuantity @record.InventoryRecord?.Material?.Unit</td>
                                    <td>
                                        @{
                                            var reasonStr = record.Reason.ToString();
                                        }
                                        @switch (reasonStr)
                                        {
                                            case "NormalUse": <text>استخدام عادي</text> break;
                                            case "Obsolescence": <text>انتهاء صلاحية</text> break;
                                            case "TechnicalFailure": <text>عطل فني</text> break;
                                            case "Accident": <text>حادث</text> break;
                                            case "EndOfLife": <text>انتهاء العمر</text> break;
                                            default: @reasonStr break;
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var decisionStr = record.Decision.ToString();
                                            var badgeClass = decisionStr == "Dispose" ? "bg-danger" : 
                                                            decisionStr == "Sell" ? "bg-success" : 
                                                            decisionStr == "Repair" ? "bg-info" : "bg-warning";
                                        }
                                        <span class="badge @badgeClass">
                                            @switch (decisionStr)
                                            {
                                                case "Dispose": <text>إتلاف</text> break;
                                                case "Sell": <text>بيع</text> break;
                                                case "Repair": <text>إصلاح</text> break;
                                                case "UnderReview": <text>قيد المراجعة</text> break;
                                                default: @decisionStr break;
                                            }
                                        </span>
                                    </td>
                                    <td>@record.OriginalValue.ToString("N0")</td>
                                    <td class="text-danger">@record.LossValue.ToString("N0")</td>
                                    <td>
                                        <a href="/Consumption/Details/@record.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                        else if (Model.Items != null && Model.Items.Any())
                        {
                            int counter = 1;
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>@item.ConsumptionDate.ToString("yyyy/MM/dd")</td>
                                    <td><code>@item.MaterialCode</code></td>
                                    <td>@item.MaterialName</td>
                                    <td>@item.Quantity @item.Unit</td>
                                    <td>@(item.Purpose ?? "-")</td>
                                    <td>-</td>
                                    <td>@item.TotalValue.ToString("N0")</td>
                                    <td class="text-danger">@item.TotalValue.ToString("N0")</td>
                                    <td>-</td>
                                </tr>
                                counter++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="text-center py-4">
                                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                    <p class="text-muted mt-2">لا توجد سجلات استهلاك لهذه الفترة</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                    @if (Model.Records != null && Model.Records.Any())
                    {
                        <tfoot class="table-secondary">
                            <tr>
                                <th colspan="4">الإجمالي</th>
                                <th>@Model.Records.Sum(r => r.ConsumedQuantity)</th>
                                <th colspan="2"></th>
                                <th>@Model.Records.Sum(r => r.OriginalValue).ToString("N0")</th>
                                <th class="text-danger">@Model.Records.Sum(r => r.LossValue).ToString("N0")</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>

    <!-- ملخص حسب السبب والقرار -->
    @if (Model.Records != null && Model.Records.Any())
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-pie-chart"></i> حسب السبب</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        @if (Model.Statistics?.ByReason != null && Model.Statistics.ByReason.Any())
                        {
                            foreach (var kvp in Model.Statistics.ByReason)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@kvp.Key</span>
                                    <span class="badge bg-primary">@kvp.Value سجل</span>
                                </li>
                            }
                        }
                        else
                        {
                            foreach (var group in Model.Records.GroupBy(r => r.Reason))
                            {
                                var reasonName = group.Key.ToString() switch
                                {
                                    "NormalUse" => "استخدام عادي",
                                    "Obsolescence" => "انتهاء صلاحية",
                                    "TechnicalFailure" => "عطل فني",
                                    "Accident" => "حادث",
                                    "EndOfLife" => "انتهاء العمر",
                                    _ => group.Key.ToString()
                                };
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@reasonName</span>
                                    <span class="badge bg-primary">@group.Count() سجل</span>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-clipboard-check"></i> حسب القرار</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        @if (Model.Statistics?.ByDecision != null && Model.Statistics.ByDecision.Any())
                        {
                            foreach (var kvp in Model.Statistics.ByDecision)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@kvp.Key</span>
                                    <span class="badge bg-secondary">@kvp.Value سجل</span>
                                </li>
                            }
                        }
                        else
                        {
                            foreach (var group in Model.Records.GroupBy(r => r.Decision))
                            {
                                var decisionName = group.Key.ToString() switch
                                {
                                    "Dispose" => "إتلاف",
                                    "Sell" => "بيع",
                                    "Repair" => "إصلاح",
                                    "UnderReview" => "قيد المراجعة",
                                    _ => group.Key.ToString()
                                };
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@decisionName</span>
                                    <span class="badge bg-secondary">@group.Sum(r => r.LossValue).ToString("N0") د.ع</span>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
</div>
